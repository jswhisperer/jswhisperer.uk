		"tailwindcss": "3.3.5",
		"tinacms": "^1.5.21",
		"typescript": "^5.2.2",
		"vite-plugin-amp": "^1.2.3",
		"vite-plugin-pwa": "^0.21.1",
		"workbox-window": "^7.3.0"
	},
	"lint-staged": {
		"*.{astro,js,jsx,ts,tsx,md,mdx,json}": [
