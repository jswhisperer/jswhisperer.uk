{
  "name": "jswhisperer",
  "type": "module",
  "version": "1.1.0",
  "description": "A template for creating a blog with Astro",
  "author": "danielcgilibert",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielcgilibert/blog-template"
  },
  "keywords": [
    "astro",
    "astrojs",
    "astro-template",
    "astro-blog",
    "astro-b"
  ],
  "bugs": {
    "url": "https://github.com/danielcgilibert/blog-template/issues"
  },
  "scripts": {
    "dev": "npx tinacms dev -c \"astro dev\"",
    "start": "astro dev",
    "build": "astro build",
    "sync": "astro sync",
    "preview": "astro preview",
    "postbuild": "pagefind --site dist && node ./processHTML.js",
    "format:check": "prettier --plugin-search-dir=. --check .",
    "format": "prettier --plugin-search-dir=. --write .",
    "lint": "eslint .",
    "pre-commit": "lint-staged",
    "generate-pwa-assets": "pwa-assets-generator --preset all public/favicon.svg",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
