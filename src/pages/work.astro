---
import { Picture } from 'astro:assets'
import BaseLayout from '@/layouts/BaseLayout'
// const renderroom = import('../../assets/images/portfolio/the-render-room.jpg')
import renderroom from '@/assets/images/portfolio/the-render-room.jpg'
// (await import('../../assets/images/portfolio/the-render-room.jpg')).default
import green from '@/assets/images/portfolio/the-green-house.jpg'
// (await import('@/assets/images/portfolio/the-green-house.jpg')).default
import auret from '@/assets/images/portfolio/olivari-auret.jpg'
// (await import('@/assets/images/portfolio/olivari-auret.jpg')).default
import angela from '@/assets/images/portfolio/angela-jeweller.jpg'
// (await import('@/assets/images/portfolio/angela-jeweller.jpg')).default
import freedom from '@/assets/images/portfolio/freedom-hill-restaurant.jpg'
import mercer from '@/assets/images/portfolio/mecer-express.jpg'
//  (await import('@/assets/images/portfolio/mecer-express.jpg')).default
import dvmakeup from '@/assets/images/portfolio/dvmakeup.jpg'
import pxsecurity from '@/assets/images/portfolio/pxsecurity.jpg'
import simapro from '@/assets/images/portfolio/simapro.jpg'
---

<BaseLayout title='Work'>
	<a aria-label='scroll to the top' href='#top' class='top tothetop small-mobile-hide'>
		<span class='hide'>scroll to the top</span>
		<span aria-hidden='true' class='icon-arrow-up'></span></a
	>
	<h2>Work <span aria-hidden='true' class='icon-cannon'></span></h2>
	<h3>OLD WORK UNDER CONSTRUCTION</h3>
	<ul class='tabs'>
		<li>
			<a href='#the-web-dev' class='active'
				>Web Dev<span class='mobile-hide small-mobile-hide'>elopment</span></a
