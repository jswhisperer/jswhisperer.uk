---
const { link, href, underlinecolor, strokewidth } = Astro.props;
---

<div class="content__item">
  <a href={link || href} class="link link--iocaste">
    <span
      ><slot />
      <svg
        class="link__graphic link__graphic--slide"
        width="300%"
        height="100%"
        viewBox="0 0 1200 60"
        preserveAspectRatio="none"
      >
        <path
          d="M0,56.5c0,0,298.666,0,399.333,0C448.336,56.5,513.994,46,597,46c77.327,0,135,10.5,200.999,10.5c95.996,0,402.001,0,402.001,0"
        ></path>
      </svg>
    </span>
  </a>
  <style define:vars={{ underlinecolor, strokewidth }}>
    /*! CSS Used from: https://tympanus.net/Development/LineHoverStyles/css/base.css */
    .content__item .content__item::after,
    .content__item::before {
      box-sizing: border-box;
    }
    .content__item {
      a {
        text-decoration: none;
        color: var(--color-link);
        outline: none;
      }
      a:hover {
        color: var(--color-link-hover);
        outline: none;
      }
      a:focus {
        outline: none;
        background: lightgrey;
      }
      a:focus:not(:focus-visible) {
        background: transparent;
      }
    }
    .content__item {
      width: 100%;
      margin: 0;
      margin-right: 20px;
      padding: 0;
      counter-increment: itemcounter;
      display: flex;
      flex-direction: column;
      align-items: end;

      position: relative;
    }
    .content__item::before {
      color: var(--color-number);
      position: absolute;
      top: 0;
      left: 0;
    }
    .link {
      cursor: pointer;
      /* font-size: 18px; */
      position: relative;
      /* white-space: nowrap; */
      color: var(--color-text);
    }

    .link--iocaste {
      overflow: hidden;
      padding: 7px 0;
    }
    .link__graphic {
      position: absolute;
      top: 0;
      left: 0;
      pointer-events: none;
      fill: none;
      stroke: var(--underlinecolor, #000);
      stroke-width: var(--strokewidth, 5px);
    }
    .link__graphic--slide {
      top: 10px;
      stroke-width: var(--strokewidth, 5px);
      transition: transform 0.7s;
      transition-timing-function: cubic-bezier(0, 0.25, 0.5, 1);
    }
    .link:hover .link__graphic--slide {
      transform: translate3d(-66.6%, 0, 0);
    }
    /*! CSS Used fontfaces */
  </style>
</div>
